<worlds>
  <world Name="JoppaWorld" Load="Merge">
    <cell Name="The_LostArena" Inherits="Jungle" 
          ApplyTo="The_LostArena" 
          Mutable="false" > <!--sets whether or not procgen functions here -->
    <!--here we build the surrounding tiles of the parasang with default jungle -->
			<zone Level="10" x="0-2" y="0-2" Name="Jungle" NameContext="Incense-drenched" IndefiniteArticle="some" HasWeather="true" WindSpeed="0-60" WindDirections="N,NW,NW,W,W,SW,S,SE" WindDuration="50-3000">
                <postbuilder Class="ZoneTemplate:Jungle"></postbuilder>
                <builder Class="FactionEncounters" Population="GenericFactionPopulation"></builder>
                <builder Class="Music" Track="Overworld1" Chance="10"></builder>
      </zone>

      <zone Level="10" x="1" y="1" Name="somename" ProperName="true">
        <map FileName="LostArena.rpm"></map> <!-- put this map file in your mod folder -->
        <builder Class="Music" Track="MehmetsMorning" Chance="100"></builder>
      </zone> 
      
      <!-- more zones such as underground could be added here -->

    </cell>

  </world>
</worlds>
